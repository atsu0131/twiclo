
  <% @likings.each do |liking| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(liking.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to liking.user.name, likes_path(liking.user) %> 
          <span class="text-muted">posted at <%= liking.created_at %></span>
        </div>
        <div>
          <p><%= liking.content %></p>
  <% end %>